algoritmo "cadastro de clientes (CLEC)"

//"Empurrando os limites da exploração lunar, a CLEC inaugura uma nova era de conquistas espaciais e inspir a humanidade a sonhar além dos horizontes terrestres."


// O programa permite realizar ATÉ 05 cadastros.

var

   nomes: vetor[0..4] de caractere
   cpf: vetor[0..4] de inteiro
   destino: vetor[0..4] de caractere
   op, nome: caractere
   i, j, s: inteiro


procedimento inicializa()

começo

   enquanto op <> "3" faca

      escreval("-- Cadastro de clientes | Ir para Viagens --")
      escreverl()
      escreval("-----------------------------------------------------")
      escreval("------------------- MENU -------------------")
      escreval("------- Escolha uma das opções abaixo ------")
      escreval("-----------------------------------------------------")
      escreverl()
      escreval("(1) Cadastrar cliente")
      escreval("(2) Buscar cliente")
      escreverl("(3) Sair")
      escreverl()

      escreva("Opção: ")
      leia(op)

      se op="1" então
         limpatela

         se s=10 então

            escreval("Esgotou o limite de cadastros/vagas!")

         senao

            cadastrar_cliente()
         fim
      fim


      se op="2" então
         limpatela

         buscar_cliente()
      fim



      se op="3" então

         para i de 0 até 4 faca
            nomes[i] <- "x"
         fimpara
         limpatela

         escreval("-- A Go To Viagens agradece pela preferência! --")
         escreval("Volte sempre!")

      fim
   fimenquanto

fimprocedimento

procedimento cadastrar_cliente()

começo

   para i de 0 até 4 faca

      se (nomes[i]="") entao

         escreval("Digite os dados do cliente")
         escreverl()

         escreva("->Nome: ")
         leia(nomes[i])


         escreva("->CPF (APENAS NÚMEROS): ")
         leia(cpf[i])

         escreva("-> Destino: ")
         leia(destino[i])

         escreverl()

         voltar_menu()

         s <- s + 1

         limpatela
      fim
   fimpara

   escreval(" -> Esgotou o limite de cadastros/vagas! <-")
   escreverl()

fimprocedimento

procedimento voltar_menu()

começo

   escrever("Voltar para o menu (s/n - letra minúscula)? ") // Resposta: letra minúscula
   leia(op)

   se op="s" entao

      eu <- eu + 1

      limpatela

      inicializa()

   senao
      limpatela

      cadastrar_cliente()
   fim
fimprocedimento


procedimento buscar_cliente()

começo

   j <- 0

   escreval("PARA BUSCAR UM CADASTRO...")
   escreverl()

   escreva("Informe o nome do(a) cliente: ")
   leia(nome)
   escreverl()

   para i de 0 até 4 faca

      se (nome=nomes[i]) entao

         escreval("-> Nome: ", nomes[i])
         escreval("-> CPF: ", cpf[i])
         escreval("-> Destino: ", destino[i])
         escreverl()

         j <- j + 1

      fim
   fimpara

   se (j = 0) então

      escreval("Ops... Cliente não cadastrado!")
      escreverl()

   fim

   Voltar_menu2()

   limpatela

fimprocedimento

procedimento voltar_menu2()

começo

   Escreva("Voltar para o MENU (s/n - letra minúscula)? ") // Resposta: letra minúscula
   leia(op)


   se op="s" entao
      limpatela

      inicializa()

   senao
      limpatela
      buscar_cliente()
   fim
fimprocedimento

começo

   inicializa()

fimalgoritmo
